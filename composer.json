{
    "name": "inspector-apm/neuron-ai",
    "description": "PHP AI Framework with built-in observability.",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Valerio Barbera",
            "email": "valerio@inspector.dev"
        }
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/inspector-apm/inspector-php"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "psr/http-message": "^1.0|^2.0",
        "inspector-apm/inspector-php": "dev-nested-segments"
    },
    "suggest": {
        "aws/aws-sdk-php": "^3.209",
        "elasticsearch/elasticsearch": "^7.0|^8.0",
        "symfony/process": "^4.0|^5.0|^6.0|^7.0",
        "typesense/typesense-php": "^5.0",
        "php-http/curl-client": "^2.3",
        "doctrine/orm": "^2.20"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.209",
        "elasticsearch/elasticsearch": "^8.0",
        "phpunit/phpunit": "^9.0",
        "symfony/process": "^5.0|^6.0|^7.0",
        "typesense/typesense-php": "^5.0",
        "php-http/curl-client": "^2.3",
        "monolog/monolog": "^3.9",
        "phpstan/phpstan": "^2.1",
        "symfony/cache": "^5.4 || ^6.4 || ^7.0",
        "ext-pdo": "*",
        "doctrine/orm": "^2.20",
        "tomasvotruba/type-coverage": "^2.0",
        "rector/rector": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.75"
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse --memory-limit=1G -v"
        ],
        "format": [
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "refactor": [
            "vendor/bin/rector"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ]
    },
    "scripts-descriptions": {
        "analyse": "Run PHPStan static analysis against your application.",
        "format": "Run PHP CS Fixer against your application.",
        "test": "Run PHPUnit to test"
    },
    "autoload": {
        "psr-4": {
            "NeuronAI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NeuronAI\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
